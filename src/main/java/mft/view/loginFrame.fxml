   <children>
      <Pane layoutX="414.0" layoutY="200.0" prefHeight="371.0" prefWidth="575.0" style="-fx-background-color: white; -fx-border-color: dimgrey; -fx-border-width: 1px 3px 3px 1px;">
         <children>
            <Label alignment="CENTER" layoutX="55.0" layoutY="36.0" text="Log in" textFill="#6a6f6c">
